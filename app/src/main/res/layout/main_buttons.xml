<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mainButtonsWidth"
    android:layout_height="@dimen/mainButtonsHeight">
    <Button
        android:layout_width="@dimen/mainButtonsWidth"
        android:layout_height="wrap_content"
        android:text="@string/main_buttonLength"
        android:layout_gravity="top|center_horizontal"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:layout_width="@dimen/mainButtonsWidth"
        android:layout_height="wrap_content"
        android:text="@string/main_buttonWeight"
        android:layout_gravity="center"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:layout_width="@dimen/mainButtonsWidth"
        android:layout_height="wrap_content"
        android:text="@string/main_buttonTemperature"
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="@dimen/textSize"
        />
</FrameLayout>