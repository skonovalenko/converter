<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mainButtonsWidth"
    android:layout_height="@dimen/mainButtonsHeight">

    <Button
        android:id="@+id/buttonLength"
        style="@style/mainButton"
        android:onClick="onClickLength"
        android:text="@string/main_buttonLength"
        android:layout_gravity="top|center_horizontal"
        />
    <Button
        android:id="@+id/buttonWeight"
        style="@style/mainButton"
        android:onClick="onClickWeight"
        android:text="@string/main_buttonWeight"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/buttonTemperature"
        style="@style/mainButton"
        android:onClick="onClickTemperature"
        android:text="@string/main_buttonTemperature"
        android:layout_gravity="bottom|center_horizontal"
        />
</FrameLayout>